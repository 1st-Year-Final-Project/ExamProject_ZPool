@page
@model ZPool.Pages.Rides.DeleteRideModel
@{
    ViewData["Tilte"] = "DeleteRide";
}

<h1>Delete a Ride</h1>
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ride.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Ride.DepartureLocation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ride.DestinationLocation)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayNameFor(model => model.Ride.SeatsAvailable)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ride.CarID)
            </dt>
            @Html.DisplayFor(model => model.Ride.RideID)
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a asp-page="index">Back to List</a>
    </div>

</div>