@page "{id}"
@model ZPool.Pages.Rides.EditRideModel
@{
    ViewData["Title"] = "EditRide";
}




<h2>Edit this Ride</h2>
<div class="form-group">
    @*<div class="col-md-4">*@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ride.RideID" />
            <div class="form-group">
                <label asp-for="@Model.ride.StartTime" class="control-label"></label>
                <input asp-for="@Model.ride.StartTime" class="form-control rounded-border" style="max-width: 13rem" />
                <span asp-validation-for="@Model.ride.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ride.DepartureLocation" class="control-label"></label>
                <input asp-for="@Model.ride.DepartureLocation" class="form-control rounded-border" style="max-width: 13rem" />
                <span asp-validation-for="@Model.ride.DepartureLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ride.DestinationLocation" class="control-label"></label>
                <input asp-for="@Model.ride.DestinationLocation" class="form-control rounded-border" style="max-width: 13rem" />
                <span asp-validation-for="@Model.ride.DestinationLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ride.SeatsAvailable" class="control-label"></label>
                <input asp-for="@Model.ride.SeatsAvailable" class="form-control rounded-border" style="max-width: 13rem" />
                <span asp-validation-for="@Model.ride.SeatsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="@Model.ride.CarID" class="control-label"></label>*@
                <input hidden asp-for="@Model.ride.CarID" class="form-control rounded-border" style="max-width: 13rem" />
                @*<span asp-validation-for="@Model.ride.CarID" class="text-danger"></span>*@
            </div>
            <div class="form group">
                <input type="submit" value="Save Changes" class="btn btn-outline-success rounded-border" />
            </div>
        </form>  
    @*</div>*@
</div>
<div>
    <a asp-page="GetAllRides">Back to Rides</a>
</div>