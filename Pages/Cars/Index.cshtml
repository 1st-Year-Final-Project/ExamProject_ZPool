@page
@model ZPool.Pages.Cars.IndexModel
@{
}
<h3 style="color:red"> List of cars</h3>
<p>
    <a asp-page="/Cars/Create">Create New Car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Car Id  </th>
            <th> Brand </th>
            <th> Model </th>
            <th> NumberOfSeats </th>
            <th> NumberPlate </th>
            <th> Color </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Cars)
            {
        <tr>
            <td>  @item.CarID </td>
            <td>  @item.Brand </td>
            <td>  @item.Model </td>
            <td>  @item.NumberOfSeats </td>
            <td>  @item.NumberPlate </td>
            <td>  @item.Color </td>
            <td>
                <p>
                    <a asp-page="/Cars/Edit" asp-route-id="@item.CarID">Edit </a>
                </p>
                <p>
                    <a asp-page="/Cars/Delete" asp-route-id="@item.CarID">Delete </a>
                </p>
            </td>
        </tr>
            }
        }
</table>