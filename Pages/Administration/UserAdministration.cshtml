@page
@model ZPool.Pages.Administration.UserAdministrationModel
@{
    ViewData["Title"] = "Admin: Users";
}

<div class="container">
    <h3> Administration: Users</h3>
    <div class="row">
        <div class="col">

            <table class="table">
                <thead>
                    <th>User Id</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>E-Mail</th>
                </thead>
                
                <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.UserName</td>
                        <td>@u.FirstName @u.LastName</td>
                        <td>@u.Email</td>
                        <td><a asp-page="EditUser" asp-route-userId="@u.Id">Edit</a></td>
                        <td><a asp-page="EditUser" asp-route-userId="@u.Id" class="text-danger">Delete</a></td>
                    </tr>
                }
                </tbody>

            </table>

        </div>
    </div>
</div>