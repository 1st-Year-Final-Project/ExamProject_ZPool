@page
@model ZPool.Areas.Identity.Pages.Account.Manage.ReadOnlyProfilePageModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var imageFlag = Model.UserAvatarName;
}

<h3>@Model.User s'Profile</h3>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br /><br /><br /><br />

            <div class="avatar-div" title="choose your avatar">
                <a asp-page="./SelectAvatar">
                    @{
                        if (imageFlag.Equals("default"))
                        {
                            <img src="~/images/defult.png" id="photo" height="200" width="200">
                        }

                        if (imageFlag.Equals("n1"))
                        {
                            <img src="~/images/N1.jpg" id="photo" height="200" width="200">
                        }

                        if (imageFlag.Equals("n2"))
                        {
                            <img src="~/images/N2.jpg" id="photo" height="200" width="200">
                        }

                        if (imageFlag.Equals("n3"))
                        {
                            <img src="~/images/N3.jpg" id="photo" height="200" width="200">
                        }

                        if (imageFlag.Equals("n4"))
                        {
                            <img src="~/images/N4.jpg" id="photo" height="200" width="200">
                        }

                        if (imageFlag.Equals("n5"))
                        {
                            <img src="~/images/N5.jpg" id="photo" height="200" width="200">
                        }
                    }

                    <input type="file" id="file">
                    <label for="file" id="uploadBtn"></label>
                </a>
            </div>


            <style>
                .avatar-div {
                    height: 150px;
                    width: 150px;
                    position: absolute;
                    top: 15%;
                    right: 15%;
                    transform: translate(-50%,-50%);
                    border-radius: 50%;
                    overflow: hidden;
                    border: 1px solid grey;
                }

                #photo {
                    height: 100%;
                    width: 100%;
                }
            </style>
            <br /><br /><br /><br /><br /><br /><br /><br />

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserGender"></label>
                <input asp-for="UserGender" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Introduction"></label>
                <input asp-for="Introduction" class="form-control" disabled />
            </div>








        </form>
