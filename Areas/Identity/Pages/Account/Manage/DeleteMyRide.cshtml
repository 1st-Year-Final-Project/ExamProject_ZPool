@page
@model ZPool.Areas.Identity.Pages.Account.Manage.DeleteMyRideModel
@{
    ViewData["Title"] = "Delete My Rides";
    ViewData["ActivePage"] = ManageNavPages.MyRides;
}

<h1>Delete My Ride</h1>

<h3>Are you sure you want to delete the following ride?</h3>
<div>

    <hr />
    <form method="post">
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ride.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ride.DepartureLocation)

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ride.DestinationLocation)
            </dt>
        </dl>

        <input type="hidden" asp-for="Ride.RideID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./MyRides">Back to List</a>
    </form>
</div>