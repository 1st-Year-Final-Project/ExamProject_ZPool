@page
@model ZPool.Areas.Identity.Pages.Account.Manage.MyCarsModel
@{
    ViewData["Title"] = "My Cars";
    // Please tell me what is the function of this sentence? I find the app works well without it.
    ViewData["ActivePage"] = ManageNavPages.MyCars;
}
<h3 style="color:red"> List of cars</h3>
<p>
    <a asp-page="./CreateCar" class="btn btn-outline-primary">Create New Car</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th> Car Id  </th>
        <th> Brand </th>
        <th> Model </th>
        <th> NumberOfSeats </th>
        <th> NumberPlate </th>
        <th> Color </th>
    </tr>
    </thead>
    <tbody>

    @if (Model != null)
    {
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>  @item.CarID </td>
                <td>  @item.Brand </td>
                <td>  @item.Model </td>
                <td>  @item.NumberOfSeats </td>
                <td>  @item.NumberPlate </td>
                <td>  @item.Color </td>
                <td>
                    <p>
                        <a asp-page="./EditCar" asp-route-id="@item.CarID">Edit</a>
                    </p>
                    <p>
                        <a asp-page="./DeleteCar" asp-route-id="@item.CarID" class="text-danger">Delete </a>
                    </p>
                </td>
            </tr>
        }
    }
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}