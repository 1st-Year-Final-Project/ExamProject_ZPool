@page
@model ZPool.Areas.Identity.Pages.Account.Manage.DeleteUserModel
@{
}


<h1>Delete My Account</h1>

<h3>Are you sure you want to delete your account?</h3>
<div>

    <hr />
    <form method="post">
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LoggedInUser.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LoggedInUser.UserName)

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LoggedInUser.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LoggedInUser.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LoggedInUser.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LoggedInUser.Email)
            </dd>
            
        </dl>


        <input type="hidden" asp-for="LoggedInUser.Id" />
        <input asp-page-handler="Delete" method="post" type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>